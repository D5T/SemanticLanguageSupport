{
    "English Version Let":{
        "prefix": "let",
        "body": [
            "let ${1:variable} := ${2:expression};"
        ],
        "description": "Snippet for \"let...\""
    },
    "Russian Version Let":{
        "prefix": "пусть",
        "body": [
            "пусть ${1:переменная} := ${2:выражение};"
        ],
        "description": "Сниппет для выражения \"пусть...\""
    },

    "English Version Import":{
        "prefix": "import",
